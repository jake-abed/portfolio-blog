<style>
  .intro-box {
    display: flex;
    width: min(80%, 1200px);
    opacity: 0;
    flex-direction: row;
    justify-content: space-evenly;
    align-items: center;
    gap: 2rem;
    padding: 4rem;
    border: 2px solid var(--pink);
    border-radius: 1rem;
    box-shadow: inset 0px 0px 8px 2px var(--transparent-pink);
    animation: 1s ease-in-out 0.05s 1 forwards fade-in-up;
  }

  .pic-container {
    display: flex;
    width: min(50%, 300px);
    border-radius: 1rem;
    box-shadow: 0px 0px 8px 1px var(--transparent-pink);
  }

  .pic-container img {
    border-radius: 1rem;
    max-width: 100%;
    height: auto;
    box-shadow: 0px 0px 8px 2px var(--transparent-pink);
  }

  .links {
    display: flex;
    gap: 0.5rem;
  }

  .li-icon:hover {
    fill: var(--pink);
  }

  .icon:hover {
    stroke: var(--pink);
  }

  h2 {
    font-size: 2.5rem;
  }

  p {
    font-size: 1.25rem;
    padding: 0.5rem 0;
  }

  p.hidden-text {
    font-size: 1rem;
    opacity: 0;
    transition: opacity 0.75s 0.5s;
    cursor: default;
  }

  p.hidden-text:hover {
    opacity: 1;
  }

  h2 span {
    color: var(--pink);
  } 

  @media (max-width: 1000px) {
    .intro-box {
      padding: 2rem;
      flex-direction: column;
    }
  }
</style>
