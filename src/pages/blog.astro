---
import Layout from '../layouts/Layout.astro';

const allPosts = (Object.values(import.meta.glob('./blogs/*.md', { eager: true })) as BlogPost[]).sort((a, b) => {
  return new Date(b.frontmatter.pubDate).getTime() - new Date(a.frontmatter.pubDate).getTime();
}).map((post) => ({
  frontmatter: post.frontmatter,
  url: post.url
}));
const title = "Jake of All Trades: Dev Blog & More";
const desc = "Blog posts fresh out of the oven that is Jake's mind. Ruminations on programming, game dev, & life.";

type BlogPost = {
  frontmatter: {
    title: string;
    pubDate: string;
    description: string;
  },
  url: string;
}
---

<Layout title={title} description={desc}>
  <section id="posts">
    <h1>The Jake of All Trades</h1>
    <h2>Master of none, but having fun. Ahem, is this thing even on?<h2>
    <p>Software, Web, and Game Dev thoughts for your eyes only.</p>
    <ul>
      {allPosts.map((post) => <li><div><a href={post.url}>{post.frontmatter.title}</a><span>{new Date(post.frontmatter.pubDate).toLocaleDateString()}</span></div></li>)}
    </ul>
  </section>
</Layout>

<style>
  #posts {
    box-sizing: border-box;
    opacity: 0;
    width: min(1000px, 90%);
    margin: 8rem auto;
    padding: 1rem 2rem;
    border: 2px solid var(--pink);
    border-radius: 2rem;
    box-shadow: inset 0px 0px 8px 2px var(--transparent-pink);
    animation: 1s ease-in-out 0.05s 1 forwards fade-in-up;
  }
  
  h1, h2 {
    text-align: center;
  }

  h1 {
    font-size: 2.25rem;
    padding: 1rem 0;
  }

  h2 {
    font-size: 1.25rem;
    padding: 0.25rem 0 1rem 0;
  }
  p {
    padding: 0.5rem 0;
    font-size: 1rem;
  }

  ul {
    padding: 2rem 0;
    margin: 0 auto;
    width: 70%;
  }

  li {
    text-align: start;
    padding: 0.75rem 0.25rem;
    border-bottom: 2px dotted var(--pink);
  }

  li:last-of-type {
    border-bottom: none;
  }

  li div {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0.5rem 0;
  }

  li div a {
    display: inline;
    width: 100%;
  }

  li div span {
    font-size: 0.75rem;
  }
</style>